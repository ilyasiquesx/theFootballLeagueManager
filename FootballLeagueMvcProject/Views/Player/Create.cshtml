@model FootballLeagueMvcProject.ViewModels.CreatePlayerViewModel
@{
    ViewData["Title"] = "Создание игрока";
}



<h3 class="p-2 bg-info text-white text-center mb-3">Создать профиль игрока</h3>
<form enctype="multipart/form-data" method="post">
    <div class="form-group bg-info text-white">
        <div class="row p-2">
            <label asp-for="LastName" class="col-form-label col-md"> Введите фамилию </label>
            <div class="col-xl">
                <input type="text" class="form-control" asp-for="LastName" placeholder="Паненко" />
            </div>
            <label asp-for="FirstName" class="col-form-label col-md">Введите имя </label>
            <div class="col-xl">
                <input type="text" class="form-control" asp-for="FirstName" placeholder="Иван" />
            </div>
            <label asp-for="Patronymic" class="col-form-label col-md">Введите отчество</label>
            <div class="col-xl">
                <input type="text" class="form-control" asp-for="Patronymic" placeholder="Сергеевич" />
            </div>
        </div>
    </div>
    <div class="form-group bg-info text-white  rounded">

        <div class="row p-2">
            <label asp-for="Role" class="col-form-label col-md">Выберите амплуа</label>
            <div class="col-md">
                <select asp-for="Role" class="form-control">
                    @foreach (var item in Model.Roles)
                    {
                        <option>
                            @item
                        </option>
                    }
                </select>
            </div>
            <label asp-for="AtNumber" class="col-form-label col-md">Игровой номер игрока</label>
            <div class="col-md">
                <input class="form-control" type="number" min="1" value="17" asp-for="AtNumber">
            </div>
        </div>
    </div>
    <div class="form-group bg-info text-white rounded">
        <div class="row p-2">
            <label asp-for="@Model.DateOfBirth" class="col-form-label col-xl">День рождения: </label>
            <div class="col-xl">
                <input class="form-control" type="date" asp-for="@Model.DateOfBirth"
                       value="1998-07-22"
                       min="1950-01-01" max="2018-12-31">
            </div>
            <label asp-for="Photo" class="col-form-label col-xl">Выберите фото игрока</label>
            <div class="col-xl">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Выберите фото</label>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <input type="submit" class="btn btn-success" value="Создать игрока" />
    </div>
</form>






