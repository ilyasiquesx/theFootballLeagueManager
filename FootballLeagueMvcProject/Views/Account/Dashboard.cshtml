@model IEnumerable<FootballLeagueMvcProject.ViewModels.ModerViewModel>
@{
    ViewData["Title"] = "Панель управления";
}

<h1 class="p-4 bg-info text-white text-center">Список модераторов сайта</h1>

<div class="text-right ">
    <form asp-action="CreateModerator" asp-controller="Account">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">Укажите полное имя человека, которому предназначается аккаунт</span>
            </div>
            <input type="text" name="fullname" class="form-control">
        </div>
        <button type="submit" class="btn btn-sm btn-danger">Создать модератора</button>
    </form>
</div>

<table class="table table-dark mt-4 text-center">
    <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Логин</th>
            <th scope="col">Владелец аккаунта</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th class="align-middle">@item.UserId</th>
            <td class="align-middle">@item.Login</td>
            <td class="align-middle">@item.FullName</td>
            <td class="align-middle"><form asp-action="DeleteModerator" asp-controller="Account"><input hidden name="username" value="@item.Login" /><button type="submit" class="btn btn-sm btn-danger">Удалить</button></form></td>
        </tr>
        }
    </tbody>
</table>