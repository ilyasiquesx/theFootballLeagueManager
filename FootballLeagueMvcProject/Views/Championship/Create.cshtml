@model FootballLeagueMvcProject.ViewModels.CreateCompetitionViewModel
@{
    ViewData["Title"] = "Создать соревнование";
}

<h1 class="text-center p-3 bg-info text-white">Подготовка соревнования</h1>
<form method="post" class="mx-auto">
    <div class="form-group row mx-0 bg-info p-2 text-white rounded text-center">
        <label asp-for="Name" class=" col-form-label col">Введите название соревнования</label>
        <div class="col-md">
            <input type="text" class="form-control" asp-for="Name" placeholder="Летнее первенство" />
        </div>
    </div>
    <div class="text-right">
        <input type="submit" class="btn btn-success" value="Создать соревнование" />
    </div>
</form>