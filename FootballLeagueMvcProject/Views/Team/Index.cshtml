@model IEnumerable<FootballLeagueMvcProject.ViewModels.TeamViewModel>
@{
    ViewData["Title"] = "Список команд";
}

<h3 class="p-2 bg-info text-white text-center">Список всех команд</h3>

@if (User.IsInRole("Admin"))
{
    <div class="my-3 text-right">
        <p class="font-weight-bold">Создать команду</p>
        <a asp-action="Create" asp-controller="Team"><div class="btn btn-danger text-right">Создать</div></a>
    </div>
}
<div class="table-responsive">
    <table class="table table-dark text-center text-center">
        <thead>
            <tr>
                <th scope="col">Лого</th>
                <th scope="col">Название</th>
                <th scope="col">Количество игроков</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @{var logoPath = "/teamlogos/" + item.Logo;}
                        <a asp-action="Profile" asp-controller="Team" asp-route-id="@item.TeamId"><img height="50" src="@logoPath" asp-append-version="true"/></a>
                    </td>
                    <td class="align-middle">
                        <a asp-action="Profile" asp-controller="Team" asp-route-id="@item.TeamId" class="text-info font-weight-bold">@item.Name</a>
                    </td>
                    <td class="align-middle">@item.PlayersCount</td>
                </tr>
            }

        </tbody>
    </table>
</div>
