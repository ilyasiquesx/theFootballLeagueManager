@model FootballLeagueMvcProject.ViewModels.CreateTeamViewModel
@{
    ViewData["Title"] = "Создание команды";
}

<h3 class="p-2 bg-info text-white text-center mb-3">Создать профиль команды</h3>

<form enctype="multipart/form-data" method="post" class="mx-auto">
    <div class="form-group bg-info text-white rounded">
        <div class="row p-2">
            <label asp-for="Name" class=" col-form-label col-md">Введите название команды</label>
            <div class="col-xl">
                <input type="text" class="form-control" asp-for="Name" placeholder="Легион" />
            </div>
            <label asp-for="Logo" class="col-form-label col-md">Выберите лого команды</label>
            <div class="col-xl">
                <div class="custom-file col-md">
                    <input asp-for="Logo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Выберите фото</label>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <input type="submit" class="btn btn-success" value="Создать" />
    </div>
</form>